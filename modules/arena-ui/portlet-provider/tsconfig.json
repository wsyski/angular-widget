{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noStrictGenericChecks": true,
    "outDir": "build",
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "typeRoots": [
      "./node_modules/@types/",
      "./@types"
    ],
    "types": [
      "jasmine",
      "node"
    ]
  },
  "include": [
    "@types/**/*.ts",
    "src/main/resources/META-INF/resources/**/*.ts"
  ]
}
